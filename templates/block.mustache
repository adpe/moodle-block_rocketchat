{{!
    @template block_rocketchat/block

    This template renders the main content area for the Rocket.Chat block.

    Example context (json):
    {
        "logouturl": "https://FQDN/blocks/rocketchat/classes/logout.php?id=courseid",
        "user": [
            {
                "status": "offline"
            }
        ],
        "private": [
            {
                "id": "GENERAL",
                "name": "general",
                "href": "https:\/\/FQDN\/channel\/",
                "layout": "?layout=embedded"
            }
        ],
        "public": [
            {
                "id": "GENERAL",
                "name": "general",
                "href": "https:\/\/FQDN\/channel\/",
                "layout": "?layout=embedded"
            }
        ]
    }
}}
<div id="block-rocketchat-{{uniqid}}" data-region="rocketchat">
    <div class="container p-0">
        <div class="flex-fill d-flex justify-content-end">
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="rocketchat_dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    {{#user}}
                        {{#status-online}}
                            {{#pix}} i/item, core, {{#str}} online, message {{/str}} {{/pix}}
                        {{/status-online}}

                        {{#status-away}}
                            {{#pix}} i/calendareventtime, core, {{#str}} away, block_rocketchat {{/str}} {{/pix}}
                        {{/status-away}}

                        {{#status-busy}}
                            {{#pix}} i/excluded, core, {{#str}} busy, block_rocketchat {{/str}} {{/pix}}
                        {{/status-busy}}

                        {{#status-offline}}
                            {{#pix}} i/uncheckedcircle, core, {{#str}} offline, message {{/str}} {{/pix}}
                        {{/status-offline}}
                    {{/user}}
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="rocketchat_dropdown">
                    <li><a class="dropdown-item" href="{{logouturl}}">Logout</a></li>
                </ul>
            </div>
        </div>

        <h6 class="pt-3">{{#pix}} i/switchrole, core {{/pix}} {{#str}} individualconversations, core_message {{/str}}</h6>
        <div class="list-group mb-3">
        {{#private}}
            <a href="{{href}}{{name}}{{layout}}" class="list-group-item list-group-item-action" target="_blank">{{name}}</a>
        {{/private}}
        {{^private}}
            <small>{{#str}} noindividualconversations, core_message {{/str}}</small>
        {{/private}}
        </div>

        <h6>{{#pix}} i/group, core {{/pix}} {{#str}} groupconversations, core_message {{/str}}</h6>
        <div class="list-group">
        {{#public}}
            <a href="{{href}}{{name}}{{layout}}" class="list-group-item list-group-item-action" target="_blank">{{name}}</a>
        {{/public}}
        {{^public}}
            <small>{{#str}} nogroupconversations, core_message {{/str}}</small>
        {{/public}}
        </div>
    </div>
</div>
<iframe id="rocketchat-login" class="d-none" src="{{#loginurl}}{{loginurl}}{{/loginurl}}#"></iframe>
