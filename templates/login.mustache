<div class="wrappingdiv">
	<form id="rocketchat_form_login" method="post" action="">
		<div><p>{{# str}} intro, block_rocketchat {{/ str}}</p></div>
		<div class="field-group">
	    	<div><label for="username">{{# str}} username, block_rocketchat {{/ str}}</label></div>
			<div><input class="textfield" type="text" name="username" value="{{tmpusername}}"></div>
		</div>
		<div class="field-group">
			<div><label for="password">{{# str}} password, block_rocketchat {{/ str}}</label></div>
	    	<div><input class="textfield" type="password" name="password" value="{{tmppassword}}"></div>
		</div>
	    <div class="field-group">
	    	<div><input class="loginbtn" type="submit" name="submit" value="{{# str}} submit, block_rocketchat {{/ str}}"></div>
		</div>
	</form>
</div>